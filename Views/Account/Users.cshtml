@model IEnumerable<UsersApp>

@{
    ViewData["Title"] = "List of all users";
}

<div>
    <h1 class="mb-4 text-xl font-extrabold text-gray-900 dark:text-white md:text-3xl lg:text-4xl p-6">
        <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">List of all users</span>
    </h1>
</div>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg p-8">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">@Html.DisplayNameFor(model => model.Name)</th>
                <th scope="col" class="px-6 py-3">@Html.DisplayNameFor(model => model.UserName)</th>
                <th scope="col" class="px-6 py-3">@Html.DisplayNameFor(model => model.Email)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                    <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.Email)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="flex justify-end mb-4 p-6">
        <a asp-action="Register" class="text-white bg-gradient-to-br from-green-400 to-blue-600 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-200 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">Create New</a>
    </div>
}
