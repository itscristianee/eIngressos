@model IEnumerable<eIngressos.Models.ActedIn>

@{
ViewData["Title"] = "ActedIn Index";
}

<div>
    <h1 class="mb-4 text-xl font-extrabold text-gray-900 dark:text-white md:text-3xl lg:text-4xl p-6">
        <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Filmes e seus Actores</span>
    </h1>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 l:grid-cols-3 gap-2 p-8">
@foreach (var item in Model.GroupBy(x => x.Movie))
{
    <div class="block p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
        <div>
            <!-- Display Movie Poster -->
            <div class="flex justify-center mb-2">
                <img class="h-32 w-32 object-cover" src="@item.Key.Image" alt="@item.Key.Title">
            </div>
            <div class="text-center">
                <h5 class="text-lg font-semibold">@item.Key.Title</h5>
                <a href="/ActedIn/Edit/@item.Key.Id" class="text-blue-500 hover:text-blue-700">Edit</a>
            </div>
            <hr class="my-4" />
            <!-- Display Actors, Characters, and Roles -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                @foreach (var actedIn in item)
                {
                <div class="text-center mb-4">
                    <div class="mb-2">
                        <img class="h-24 w-24 object-cover mx-auto" src="@actedIn.Actor.Photo" alt="@actedIn.Actor.Name">
                    </div>
                    <h5 class="text-lg font-semibold">@actedIn.Actor.Name</h5>
                    <p class="text-sm">Character: @actedIn.Character</p>
                    <p class="text-sm">Role: @actedIn.Role</p>
                </div>
                }
            </div>
        </div>
    </div>
}
</div>
<hr class="my-6" />

<div class="flex justify-end mb-4 p-6">
    <a asp-action="Create" class="text-white bg-gradient-to-br from-green-400 to-blue-600 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-200 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">Nova Associação</a>
</div>
