@using eIngressos.Data.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model eIngressos.Models.Movies

@{
ViewData["Title"] = "Edit";
}

<hr />
<div class="flex justify-center items-center min-h-screen">
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg p-6 bg-white dark:bg-gray-800 w-4/5 max-w-3xl mx-auto">
        <div class="text-center mb-6">
            <h1 class="mb-4 text-xl font-extrabold text-gray-900 dark:text-white md:text-3xl lg:text-4xl">
                <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Edit</span> Movies
            </h1>
            <img id="previewImage" class="rounded-full w-40 h-40 mb-4 mx-auto bg-gray-800" src="@Model.Image" alt="Foto">
        </div>
        <form asp-action="Edit" class="max-w-full mx-auto" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-5">
                <label asp-for="Title" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
                <input asp-for="Title" required class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-5">
                <label asp-for="Description" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
                <textarea asp-for="Description" required rows="4" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" placeholder="Descrição do filme..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-6">
                <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" for="image">Foto</label>
                <input id="image" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg cursor-pointer block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-gray-400 focus:outline-none dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" type="file" onchange="previewAndConvertImage(event)">
                <input id="photo" asp-for="Image" required type="hidden" name="photo" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="mb-5">
                <label asp-for="Duration" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
                <input asp-for="Duration" required class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="mb-5">
                <label asp-for="AgeRating" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
                <input asp-for="AgeRating" required class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" />
                <span asp-validation-for="AgeRating" class="text-danger"></span>
            </div>
            <div class="mb-5">
                <label asp-for="Producer" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
                <input asp-for="Producer" required class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" />
                <span asp-validation-for="Producer" class="text-danger"></span>
            </div>
            <div class="mb-5">
                <label asp-for="Category" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
                <select asp-for="Category" required class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="mb-5">
                <label asp-for="PriceAux" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
                <input asp-for="PriceAux" required class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" />
                <span asp-validation-for="PriceAux" class="text-danger"></span>
            </div>
            <div class="flex justify-between">
                <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Save</button>
                <button type="button" onclick="location.href='@Url.Action("Index")'" class="text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800 ml-4">Back to List</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    function previewAndConvertImage(event) {
        const reader = new FileReader();
        reader.onload = function() {
            const preview = document.getElementById('previewImage');
            const imageInput = document.getElementById('photo');
            const base64String = reader.result;
            preview.src = base64String;
            imageInput.value = base64String;
        };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>
}
