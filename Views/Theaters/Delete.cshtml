@model eIngressos.Models.Theaters

@{
ViewData["Title"] = "Delete";
}

<hr />
<div class="flex justify-center items-center min-h-screen">
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg p-6 bg-white dark:bg-gray-800 w-4/5 max-w-3xl mx-auto">
        <div class="text-center mb-6">
            <h1 class="mb-4 text-xl font-extrabold text-gray-900 dark:text-white md:text-3xl lg:text-4xl">
                <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Excluir</span> Sala
            </h1>
            <h3 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">Tem a certeza de que pretende excluir isto?</h3>
            <h4 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">@Model.Name</h4>
        </div>
        <form asp-action="Delete" class="max-w-full mx-auto">
            <input type="hidden" asp-for="Id" />
            <div class="flex justify-between">
                <button type="submit" class="text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-800">Delete</button>
                <button type="button" onclick="location.href='@Url.Action("Index")'" class="text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800 ml-4">Back to List</button>
            </div>
        </form>
    </div>
</div>
