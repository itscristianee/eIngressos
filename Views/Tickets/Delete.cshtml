@model eIngressos.Models.Tickets

@{
    ViewData["Title"] = "Delete Ticket";
}

<hr />
<div class="flex justify-center items-center min-h-screen">
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg p-6 bg-white dark:bg-gray-800 w-4/5 max-w-3xl mx-auto">
        <div class="text-center mb-6">
            <h1 class="mb-4 text-xl font-extrabold text-gray-900 dark:text-white md:text-3xl lg:text-4xl">
                <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Excluir</span> Ticket
            </h1>
            <h3 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">Tem a certeza de que pretende excluir isto?</h3>
        </div>
        <div>
            <h4 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Detalhes do Ticket</h4>
            <hr class="mb-6"/>
            <dl class="grid grid-cols-2 gap-x-4 gap-y-2">
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">
                    @Html.DisplayNameFor(model => model.Sold)
                </dt>
                <dd class="text-sm text-gray-900 dark:text-white">
                    @Html.DisplayFor(model => model.Sold)
                </dd>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="text-sm text-gray-900 dark:text-white">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">
                    @Html.DisplayNameFor(model => model.Total)
                </dt>
                <dd class="text-sm text-gray-900 dark:text-white">
                    @Html.DisplayFor(model => model.Total)
                </dd>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">
                    @Html.DisplayNameFor(model => model.PurchaseDate)
                </dt>
                <dd class="text-sm text-gray-900 dark:text-white">
                    @Html.DisplayFor(model => model.PurchaseDate)
                </dd>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">
                    @Html.DisplayNameFor(model => model.Session)
                </dt>
                <dd class="text-sm text-gray-900 dark:text-white">
                    @Html.DisplayFor(model => model.Session.Movie.Title) (Session on @Html.DisplayFor(model => model.Session.SessionDateTime))
                </dd>
            </dl>
        </div>
        <form asp-action="DeleteConfirmed" method="post" class="mt-6">
            <input type="hidden" asp-for="Id" />
            <div class="flex justify-between">
                <button type="submit" class="text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-800">Delete</button>
                <button type="button" onclick="location.href='@Url.Action("Index", "Movies")'" class="text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800 ml-4">Back to List</button>
            </div>
        </form>
    </div>
</div>
