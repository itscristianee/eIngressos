@model eIngressos.Models.TicketPurchaseViewModel

@{
    ViewData["Title"] = "My Purchases";
}

<hr />
<div class="flex justify-center items-center min-h-screen">
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg p-6 bg-white dark:bg-gray-800 w-4/5 max-w-3xl mx-auto">
        <div class="text-center mb-6">
            <h1 class="mb-4 text-xl font-extrabold text-gray-900 dark:text-white md:text-3xl lg:text-4xl">
                <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">My</span> Purchases
            </h1>
        </div>

        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Tickets Bought</h3>
        <table class="table-auto w-full text-left text-gray-700 dark:text-gray-300">
            <thead class="bg-gray-200 dark:bg-gray-700">
                <tr>
                    <th class="px-4 py-2">Movie Title</th>
                    <th class="px-4 py-2">Session Date</th>
                    <th class="px-4 py-2">Purchase Date</th>
                    <th class="px-4 py-2">Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model.PurchasedTickets)
                {
                    <tr class="bg-white dark:bg-gray-800">
                        <td class="border px-4 py-2">@ticket.Session.Movie.Title</td>
                        <td class="border px-4 py-2">@ticket.Session.SessionDateTime.ToString("MM/dd/yyyy HH:mm")</td>
                        <td class="border px-4 py-2">@ticket.PurchaseDate.ToString("MM/dd/yyyy")</td>
                        <td class="border px-4 py-2">@ticket.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="flex justify-between mt-6">
            <button type="button" onclick="location.href='@Url.Action("Index", "Movies")'" class="text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800 ml-4">Back to Home</button>
        </div>
    </div>
</div>
